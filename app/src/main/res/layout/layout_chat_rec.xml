<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
android:layout_marginBottom="1dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#E2E9E9E9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/circleImageView_icon_chat_rec"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:autoSizeMaxTextSize="80dp"
            android:background="@drawable/bg_chat_white"
            android:padding="8dp"
            android:layout_height="44dp"
            android:id="@+id/textView_message"
            app:layout_constraintTop_toTopOf="@+id/circleImageView_icon_chat_rec"
            app:layout_constraintStart_toEndOf="@+id/circleImageView_icon_chat_rec" android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.666"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:id="@+id/textView_date" app:layout_constraintStart_toStartOf="@+id/textView_message"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/textView_message"
            android:textSize="8sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_pseudo"
            app:layout_constraintTop_toBottomOf="@+id/textView_message"
            app:layout_constraintStart_toStartOf="@+id/textView_message" android:layout_marginStart="8dp"
            android:textSize="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>