<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
android:layout_marginBottom="1dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#E2E9E9E9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/circleImageView_icon_chat_rec"
            android:background="@drawable/default_icon_profile"/>
    <TextView
            android:maxWidth="200dp"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_chat_white"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:id="@+id/textView_message"
            app:layout_constraintTop_toTopOf="@+id/circleImageView_icon_chat_rec"
            app:layout_constraintStart_toEndOf="@+id/circleImageView_icon_chat_rec" android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.222" android:textSize="18sp" android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-light" android:textColor="@color/fui_bgGitHub"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="9dp"
            android:textColor="#F3F3F3"
            android:id="@+id/textView_date" app:layout_constraintStart_toStartOf="@+id/textView_message"
            android:layout_marginStart="8dp"
            android:textSize="8sp" app:layout_constraintTop_toBottomOf="@+id/textView_message"/>

</androidx.constraintlayout.widget.ConstraintLayout>