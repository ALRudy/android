<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlanifierActivity">

    <Button
            android:text="DATE"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:id="@+id/btn_date_pick" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="HEURE"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:id="@+id/btn_time_pick" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_date_pick"
            app:layout_constraintEnd_toEndOf="@+id/btn_date_pick"
            app:layout_constraintStart_toStartOf="@+id/btn_date_pick"/>
</androidx.constraintlayout.widget.ConstraintLayout>