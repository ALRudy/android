<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_principal"
        tools:context=".PrincipalActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="74dp"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="32dp"
               android:layout_height="32dp"
               android:src="@drawable/icon_profile"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="16dp" android:layout_marginTop="30dp"
               app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/icon_recherche"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"
               android:layout_marginEnd="132dp"/>
    <com.github.okdroid.checkablechipview.CheckableChipView
            android:id="@+id/chip"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/pie_cake"
            android:textColor="#99FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintVertical_bias="0.099"
            android:color="#8BDA0000"/>
    <com.andremion.counterfab.CounterFab
            app:backgroundTint="#C1FF0000"
            app:fabSize="normal"
            android:id="@+id/counter_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/messages"
            android:backgroundTint="#00694646"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:borderWidth="@dimen/inner_padding_right"
            android:layout_marginEnd="32dp"/>
    <com.andremion.counterfab.CounterFab
            app:backgroundTint="#C1FF0000"
            app:fabSize="mini"
            android:id="@+id/counter_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notifs"
            android:backgroundTint="#00694646"
            app:layout_constraintTop_toTopOf="parent"
            app:borderWidth="@dimen/inner_padding_right"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp" android:layout_marginTop="8dp"/>
    <nl.dionsegijn.steppertouch.StepperTouch
            android:backgroundTint="#83FF0000"
            android:id="@+id/stepperTouch"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:stepperTextColor="@color/red_btn_bg_pressed_color"
            tools:layout_editor_absoluteY="148dp" tools:layout_editor_absoluteX="86dp"/>
    <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/sticky_switch"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            app:ss_animationDuration="600"
            app:ss_iconPadding="10dp"
            app:ss_iconSize="42dp"
            app:ss_leftText="Ã©co"
            app:ss_rightText="vip"
            app:ss_selectedTextSize="16sp"
            app:ss_sliderBackgroundColor="#D0111118"
            app:ss_switchColor="#6AA50101"
            app:ss_textColor="#B2FFFFFF"
            app:ss_textSize="12sp"
            app:ss_animationType="line"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chip" app:layout_constraintStart_toEndOf="@+id/stepperTouch"
            android:layout_marginStart="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/list_accueil"
            android:layout_width="0dp"
            android:layout_height="511dp"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>