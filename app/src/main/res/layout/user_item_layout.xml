<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:id="@+id/layout_item_m"
        android:layout_marginBottom="2dp"
        android:elevation="20dp">

    <TextView
            android:text="@string/user_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_name_last_message"
            app:layout_constraintStart_toEndOf="@+id/imageView_icon_last_message"
            android:layout_marginStart="16dp"
            android:textColor="@color/pdlg_color_white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_icon_last_message"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="0.15" android:textAlignment="center"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="0dp"
            app:civ_border_color="#E2727272"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/default_icon_profile"
            android:id="@+id/imageView_icon_last_message"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textView_message_last_message"
            app:layout_constraintStart_toStartOf="@+id/textView_name_last_message"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_last_message" android:textSize="12sp"
            android:textColor="@color/pdlg_color_white"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/curved_shape2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_icon_last_message" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>