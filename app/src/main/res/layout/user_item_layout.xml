<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="1dp"
        android:id="@+id/layout_item_m"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

    <TextView
            android:text="@string/user_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_name_item_m"
            app:layout_constraintStart_toEndOf="@+id/imageView_icon_item_m"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:textColor="#2C2C2C"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_icon_item_m"
            android:textSize="24sp"
            app:layout_constraintVertical_bias="0.285" android:textAlignment="center"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="#E2727272"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:srcCompat="@tools:sample/avatars[1]"
            android:id="@+id/imageView_icon_item_m"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textView_item_email_m"
            app:layout_constraintStart_toStartOf="@+id/textView_name_item_m"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_item_m"/>
</androidx.constraintlayout.widget.ConstraintLayout>